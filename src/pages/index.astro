---
import { Image } from 'astro:assets';
import logoLeMedic from '../../src/img/logo-lemedic-newslogan.png'
import logoSloganLeMedic from '../img/logo-color-slogan.png'
import SliderExpectative from '../components/SliderExpectative.astro'
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logosimbolo-le-medic.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content="/bg-fachada-vert800.jpg">
		<title>Bienvenidos a Le Medic</title>
</head>
<body>
	<section class="xl:max-w-full xl:h-screen h-full grid xl:grid-cols-3 grid-cols-1 gap-0">
        <div class="col-span-2 flex items-center justify-start xl:h-screen bg-gradient-to-r from-[#47D8B8] to-[#3CBAB2]">
			<SliderExpectative />
			<!-- <Image class='object-cover' src={imgBg} alt="Le Medic" /> -->
            <!-- <h1 class="md:text-6xl text-3xl text-white font-bold text-center md:text-start">Llega a Barranquilla el primer centro médico premium de Colombia.</h1> -->
        </div>
        <div class="flex flex-col items-center justify-center py-12 xl:pt-12 xl:pb-0">
				<Image src={logoSloganLeMedic} alt="texto descriptivo" width="200" />
				<h1 class="text-verde-text-title-le-medic px-2 font-serif text-xl md:text-2xl xl:text-2xl text-center">Llega a <span class="text-verde-claro-le-medic">Barranquilla</span> el primer centro médico Premium de Colombia</h1>

				<div class="w-5/6 px-8 py-8 bg-gray-100 mt-3">
					<h2 class="text-verde-text-title-le-medic font-medium text-xl">Déjanos tus datos y participa en la preventa</h2>
					<form method="post" action="" name="contact-form">
						<div class="mt-2 grid grid-cols-1 gap-x-3 gap-y-3 sm:grid-cols-6 max-w-2xl">
							<div class="sm:col-span-3">
							<!-- <label for="first-name" class="block font-medium text-sm leading-3 text-verde-text-title-le-medic">Nombre</label> -->
							<div class="mt-2">
								<input type="text" name="nombre" id="first-name" placeholder="Nombre" class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-verde-text-title-le-medic sm:text-sm sm:leading-6" required>
							</div>
							</div>
					
							<div class="sm:col-span-3">
							<!-- <label for="last-name" class="block text-sm font-medium leading-3 text-verde-text-title-le-medic">Apellidos</label> -->
							<div class="mt-2">
								<input type="text" name="apellido" id="last-name" placeholder="Apellido" class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-verde-text-title-le-medic sm:text-sm sm:leading-6" required>
							</div>
							</div>
					
							<div class="col-span-full">
							<!-- <label for="email" class="block text-sm font-medium leading-3 text-verde-text-title-le-medic">Correo Electrónico</label> -->
							<div class="mt-2">
								<input id="email" name="email" type="email" autocomplete="email" placeholder="Correo Electrónico" class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-verde-text-title-le-medic invalid:focus:ring-red-400 sm:text-sm sm:leading-6 peer">
								<p class="text-red-400 hidden peer-invalid:block">El correo es inválido</p>
							</div>
							</div>
							<div class="sm:col-span-3">
							<!-- <label for="country" class="block text-sm font-medium leading-3 text-verde-text-title-le-medic">Celular</label> -->
							<div class="mt-2">
								<input id="celular" name="celular" type="number" autocomplete="celular" placeholder="Celular" class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-verde-text-title-le-medic sm:text-sm sm:leading-6" required>
							</div>
							</div>
					
							<div class="sm:col-span-3">
							<!-- <label for="city" class="block text-sm font-medium leading-3 text-verde-text-title-le-medic">Ciudad</label> -->
							<div class="mt-2">
								<input type="text" name="ciudad" id="city" autocomplete="address-level2" placeholder="Ciudad" class="block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-verde-text-title-le-medic sm:text-sm sm:leading-6" required>
							</div>
							</div>
								<div class="col-span-full">
								  <div class="relative flex gap-x-3">
									<div class="flex h-6 items-center">
									  <input id="comments" name="comments" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-verde-text-title-le-medic focus:ring-1" required>
									</div>
									<div class="text-sm leading-6">
									  <label for="comments" class="font-medium text-verde-text-title-le-medic text-xs leading-3">Acepto los términos y condiciones del tratamiento de mis datos personales conforme a la Ley</label>
									</div>
								  </div>
								</div>
							  
						</div>
						<div class="mt-6 flex items-center justify-end gap-x-6">
							<button id="buttom-submit" type="submit" class="rounded-md bg-verde-text-title-le-medic px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Quiero información</button>
						</div>

						<div id="form-spinner" class="hidden float-right">
							<svg aria-hidden="true" class="w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-verde-claro-le-medic" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="#c1c1c1"/>
								<path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
							</svg>
						</div>

					</form>
				</div>
        </div>
    </section>
	<script>
		const scriptURL = 'https://script.google.com/macros/s/AKfycbxvuGHsdve4EVANAQGbNzRF1ywHcboaUFWC5-R_h79EEObp7DkW0UjuEgCo2ug7wIBgBw/exec'
		const form = document.forms['contact-form'];
		const buttomSubmit = document.getElementById('buttom-submit');
		const formSpinner = document.getElementById('form-spinner')

		form.addEventListener('submit', e => {
			e.preventDefault()
			buttomSubmit.classList.add('hidden');
			formSpinner.classList.remove('hidden');
			fetch(scriptURL, { method: 'POST', body: new FormData(form)})
				.then(response => alert("¡Gracias! Tu mensaje fue enviado satisfactoriamente" ))
				.then(() => { window.location.reload(); })
				.catch(error => console.error('Error!', error.message))
		})
	</script>
</body>
</html>